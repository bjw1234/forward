
.metting {
  height: 100%;
  background: #25324D;
  overflow: hidden;

  .metting-title {
    font-size: 16px;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    line-height: 32px;
    margin-top: 20px;
    text-align: center;
  }

  .channel-name {
    font-size: 12px;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    line-height: 22px;
    text-align: center;
  }

  .user-container {
    margin: 29px auto 0;

    .user-inner {
      max-width: 324px;
      margin: 0 auto;

      .user {
        display: inline-block;
        text-align: center;
        width: 54px;
        padding: 0 13px;
        margin-bottom: 30px;

        .avatar {
          width: 54px;
          height: 54px;
          border-radius: 50%;
          overflow: hidden;

          .img {
            width: 100%;
            height: 100%;
          }

          .invivate {
            width: 54px;
            height: 54px;
            background-image: url('../../assets/img/invivate.png');
            background-size: 54px 54px;
          }
        }

        .name {
          font-size: 12px;
          font-weight: 400;
          color: rgba(255, 255, 255, 1);
          line-height: 12px;
          margin-top: 9px;

          .title {
            color: rgba(153, 153, 153, 1);
            line-height: 12px;
          }
        }
      }
    }
  }

  .footer {
    position: absolute;
    bottom: 32px;
    width: 100%;
  }

  .operator-container {
    display: flex;
    justify-content: center;

    .operator-item {
      margin: 0 21px;

      .icon {
        width: 45px;
        height: 45px;
        margin: 0 auto;
        border-radius: 50%;
        background-color: #D8D8D8;
        background-position: center;

        &.translate {
          background-image: url('../../assets/img/translate.png');
          background-repeat: no-repeat;
          background-size: 22px 22px;
          background-color: #ffffff;
        }

        &.translate-no {
          background-image: url('../../assets/img/translate-no.png');
          background-repeat: no-repeat;
          background-size: 28px 22px;
          background-color: #D8D8D8;
        }

        &.share {
          background-image: url('../../assets/img/share.png');
          background-repeat: no-repeat;
          background-size: 45px 45px;
        }

        &.recording {
          background-image: url('../../assets/img/recording.png');
          background-repeat: no-repeat;
          background-size: 45px 45px;
        }

        &.recording-run {
          background-image: url('../../assets/img/recording-run.png');
          background-repeat: no-repeat;
          background-size: 45px 45px;
        }

        &.recording-pause {
          background-image: url('../../assets/img/recording-pause.png');
          background-repeat: no-repeat;
          background-size: 45px 45px;
        }
      }

      .title {
        font-size: 14px;
        font-weight: 400;
        color: rgba(255, 255, 255, 1);
        line-height: 19px;
        margin-top: 7px;

        &.active {
          color: #0EC483;
        }
      }
    }
  }

  .bottom-container {
    width: 272px;
    height: 54px;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #484c56;
    box-shadow: 0px 5px 20px 0px rgba(0, 0, 0, 0.06);
    border-radius: 27px;
    margin: 30px auto;

    .microphone {
      width: 36px;
      height: 62px;
      background-image: url('../../assets/img/microphone.png');
      background-size: 36px 62px;
      transform: scale(0.5);
    }

    .camera {
      width: 55px;
      height: 37px;
      background-image: url('../../assets/img/camera.png');
      background-size: 55px 37px;
      transform: scale(0.5);
      margin: 0 30px;
    }

    .hangup {
      width: 70px;
      height: 24px;
      background-image: url('../../assets/img/hangup.png');
      background-size: 70px 24px;
      transform: scale(0.5);

      &::after {
        position: absolute;
        content: '';
        padding: 30px 40px;
        margin-top: -15px;
      }
    }
  }

  .mask {
    position: fixed;
    top: 0;
    bottom: 220px;
    width: 100%;
    z-index: 10;
    background: #000000b5;
    opacity: 0;
    transition: 0.3s all linear;
    z-index: -1;

    &.visible {
      opacity: 1;
      z-index: 10;

      .container {
        height: 220px;
      }
    }

    .container {
      position: fixed;
      bottom: 0;
      width: 100%;
      height: 0;
      background: #2B2F38;
      color: #7F838C;
      transition: 0.3s all linear;

      .text-container {
        text-align: center;
        padding: 20px 0;
      }

      .leave-container {
        text-align: center;
        color: #DA676A;
        padding: 30px 0;
      }

      .cancel-container {
        text-align: center;
        border-top: 1px solid #6E727B;
        padding-top: 30px;
      }
    }
  }
}