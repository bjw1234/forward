.home {
  display: block;
  position: relative;
  height: 100%;

  .user-info {
    display: flex;
    align-items: center;
    margin-top: 30px;

    .avatar {
      width: 44px;
      height: 44px;
      margin: 0 15px;
      overflow: hidden;
      border-radius: 50%;
      background: rgba(47, 125, 243, 1);

      img {
        width: 100%;
        height: 100%;
      }
    }

    .name {
      font-size: 16px;
      font-weight: 500;
      color: rgba(0, 0, 0, 1);
      line-height: 22px;
    }
  }

  .banner-wrapper {
    margin-top: 50px;

    .banner {
      height: 95px;
      margin: 0 15px;
      padding-left: 20px;
      overflow: hidden;
      border-radius: 10px;

      .line {
        margin: 26px 0 0;
        width: 42px;
        height: 4px;
        background: rgba(255, 255, 255, 1);
        border-radius: 3px;
      }

      .text {
        margin-top: 6px;
        font-size: 24px;
        font-weight: 400;
        color: rgba(255, 255, 255, 1);
        line-height: 32px;
      }
    }

    .join-banner {
      background: rgba(47, 125, 243, 1);
      box-shadow: 0px 5px 10px 0px rgba(91, 147, 231, 1);
    }

    .launch-banner {
      margin-top: 16px;
      background: rgba(14, 196, 131, 1);
      box-shadow: 0px 5px 10px 0px rgba(91, 147, 231, 1);
    }
  }

  .footer-image {
    position: fixed;
    bottom: 0;
    left: 50%;
    width: 100%;
    transform: translateX(-50%);
  }
}