.login {
  position: relative;
  height: 100%;

  .title {
    font-size: 24px;
    font-weight: 400;
    color: rgba(0, 0, 0, 1);
    line-height: 33px;
    margin: 120px 34px 40px;
  }

  .input-wrapper {
    margin: 0 30px;
    overflow: hidden;

    input {
      outline: none;
      border: none;
      font-size: 16px;
      line-height: 22px;
      border-bottom: 1px solid #EAEAEA;
      padding: 2px 10px;
      width: 100%;
    }
  }

  .btn {
    height: 42px;
    background: rgba(47, 125, 243, 1);
    border-radius: 8px;
    margin: 30px 40px 0;
    font-size: 16px;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    line-height: 42px;
    text-align: center;
  }

  .footer-image {
    margin-top: 60px;
    width: 100%;
  }
}